<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_centerInParent="true"
    android:layout_centerVertical="true"
    android:layout_height="match_parent"
    android:background="#d2d2c9"
    tools:context=".MainActivity">

    <View
        android:id="@+id/myRectangleView"
        android:layout_width="375sp"
        android:layout_height="77dp"
        android:layout_marginTop="380sp"
        android:layout_centerVertical="true"
        android:background="@drawable/rectangle"
        android:layout_marginStart="12sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="2sp"
        android:layout_marginEnd="2sp" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="72sp"
        android:layout_height="60sp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="30sp"
        android:background="@drawable/rectangle"
        android:onClick="firstImage"
        android:scaleType="centerCrop"
        android:src="@drawable/heartimg"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="24sp"
        android:contentDescription="@string/todo" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="72sp"
        android:layout_height="60sp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="110sp"
        android:background="@drawable/rectangle"
        android:onClick="secondImage"
        android:scaleType="centerCrop"
        android:src="@drawable/heartimg"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="109sp"
        android:contentDescription="@string/todo" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="72sp"
        android:layout_height="60sp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="120sp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="145sp"
        android:background="@drawable/rectangle"
        android:onClick="thirdImage"
        android:scaleType="centerCrop"
        android:src="@drawable/heartimg"
        android:layout_alignParentRight="true"
        android:layout_marginRight="128sp"
        android:layout_marginLeft="105sp"
        android:contentDescription="@string/todo" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_marginRight="90sp"
        android:layout_centerVertical="true"
        android:layout_width="72sp"
        android:layout_height="60sp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/rectangle"
        android:onClick="fourthImage"
        android:scaleType="centerCrop"
        android:src="@drawable/heartimg"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="50sp"
        android:contentDescription="@string/todo" />


</RelativeLayout>